							.col-md-12
								h5.accent Interests
								h6 How interested are you in these fields?
						
						<input v-bind:value="input" type="hidden" name="interestsContent" ref="fieldsContent"  />
						<div class="interest" v-for="(field,index) in fields" style="padding-top:20px;">
							<i v-on:click="deleteObject(index)" class="fa fa-times" style="padding-right:5px"></i>{{field[0]}}
							<i class="add fa fa-plus" style="float:right"></i>
							<input v-bind:value="field[1]" disabled type="number" value="0" class="field" style="height: 20px !important;width:40px; float:right"/>
							<i class="sub fa fa-minus" style="float:right;"></i>
						</div>
						<button v-on:click.prevent data-toggle="modal" data-target="#modalInterest" style="border-radius: 0px; border-width: 1px; text-align:center; margin-left:10px;">
							<i class="fa fa-plus"></i> add</button>
						<div class="modal fade" id="modalInterest" tabindex="-1" role="dialog" style="display:none;" aria-hidden="true">
							<div class="modal-dialog" role="document">
								<div class="modal-content" style="color:dimgrey;">
									<div class="modal-header" style="padding-bottom: 0px;">
										<div class="col-md-11">
											<h5 class="modal-title">Interests</h5>
										</div>
										<button class="close" type="button" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">×</span></button>
									</div>
									<div class="modal-body">
										<div class="row" v-for="(constant, index) in constants">
											<div class="col-md-8">
												<span style="padding-left: 30px;">{{constant.name}}</span>
											</div>
											<button v-on:click.prevent="appendObject(constant.name, 10, index)" class="pull-right" style="border:none;"><i class="fa fa-plus"></i>Add</button>
										</div>
									</div>
								</div>
							</div>
						</div>				
